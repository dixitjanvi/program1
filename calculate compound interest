#include<stdio.h>
#include<math.h>

int main() {
float principle,rate,time,CI;

//input principle,time and rate
printf("enter principle amount:");
scanf("%f",&principle);

printf("enter time:");
scanf("%f",&time);

printf("enter rate:");
scanf("%f",&rate);

//calculate compound interest 
CI= principle*(pow((1+rate/100),time));

//print the resultant CI
printf("compound interest =%f",CI);
return 0;
}
