#include <stdio.h>

// Function to print an integer
void printInteger(int num) {
    printf("The entered integer is: %d\n", num);
}

int main() {
    int number;

    // Input an integer
    printf("Enter an integer: ");
    scanf("%d", &number);

    // Call the function to print the integer
    printInteger(number);

    return 0;
}
